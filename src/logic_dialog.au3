Func dialog()
	;w8 for animation
	sleep(15)
	if is_dialog() then
		do_safarirunback()
		return True
	EndIf
	Return False
EndFunc

Func is_dialog()
	$col = PixelGetColor($POS_DIALOG[0],$POS_DIALOG[1],$PROCESS_HANDLE)
	if $col == $POS_DIALOG[2]  or $col == $POS_DIALOG[3] Then
		do_log("Dialog: detected")
		Return True
	Else		
		Return False
	EndIf
EndFunc

